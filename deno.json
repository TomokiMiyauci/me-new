{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react",
    "types": [
      "vite/client",
      "@vitejs/plugin-rsc/types",
      "vite-plugin-rsc-assets-manifest/types",
      "vite-plugin-manifest/types"
    ]
  },
  "tasks": {
    "lint": {
      "command": "deno task \"lint:*\"",
      "description": "Static check"
    },
    "lint:deno": {
      "command": "deno lint",
      "description": "Check by deno"
    },
    "lint:format": {
      "command": "deno fmt --check",
      "description": "Format check"
    },
    "dev": "deno run -P=dev --allow-net --env-file vite dev",
    "build": "deno run -P=build vite build --manifest",
    "preview": "deno serve -P=preview --allow-net --env-file --no-npm --no-remote dist/server/main.js",
    "deploy": "deno run -P=deploy @deno/deployctl deploy -p=$PROJECT_ID --token=$DEPLOY_TOKEN --prod",
    "deploy:preview": "deno run -P=deploy @deno/deployctl deploy -p=$PROJECT_ID --token=$DEPLOY_TOKEN"
  },
  "permissions": {
    "dev": {
      "read": true,
      "env": true,
      "sys": true,
      "ffi": true,
      "run": true,
      "write": true
    },
    "build": {
      "read": true,
      "env": true,
      "sys": true,
      "ffi": true,
      "run": true,
      "write": true
    },
    "preview": {
      "read": ["dist"],
      "env": true
    },
    "deploy": {
      "env": true,
      "sys": true,
      "read": true,
      "net": true
    }
  },
  "imports": {
    "@deno/deployctl": "jsr:@deno/deployctl@^1.13.1",
    "@miyauci/material-react": "jsr:@miyauci/material-react@^1.0.0-beta.24",
    "@std/cli": "jsr:@std/cli@^1.0.23",
    "@std/http": "jsr:@std/http@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.2",
    "sanity_rsc": "./src/lib/sanity_rsc/mod.ts",
    "@/": "./src/",
    "~/": "./"
  },
  "nodeModulesDir": "auto",
  "exclude": [
    "dist",
    "CHANGELOG.md"
  ],
  "deploy": {
    "exclude": [
      "**/node_modules"
    ],
    "entrypoint": "dist/server/main.js"
  },
  "workspace": [
    "src/lib/vite_node_builtin_scheme",
    "src/lib/vite_node_env",
    "src/lib/react_router",
    "src/lib/router",
    "src/lib/sanity_rsc",
    "src/lib/vite_rsc_assets_manifest",
    "src/lib/vite_plugin_import_meta",
    "src/lib/deno_env",
    "src/lib/html_stream",
    "src/lib/rsc_protocol",
    "src/lib/error_boundary",
    "src/lib/react_app"
  ],
  "lint": {
    "rules": {
      "exclude": [
        "no-slow-types"
      ]
    }
  }
}
