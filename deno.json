{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react",
    "types": [
      "vite/client",
      "@vitejs/plugin-rsc/types",
      "vite-plugin-rsc-assets-manifest/types",
      "vite-plugin-manifest/types"
    ],
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "tasks": {
    "lint": {
      "command": "deno task \"lint:*\"",
      "description": "Static check"
    },
    "lint:deno": {
      "command": "deno lint",
      "description": "Check by deno"
    },
    "lint:type": {
      "command": "deno check",
      "description": "Check types by deno"
    },
    "lint:format": {
      "command": "deno fmt --check",
      "description": "Format check"
    },
    "dev": "deno run -P=dev --allow-net --env-file vite dev",
    "build": "deno run -P=build vite build --manifest",
    "preview": "deno serve -P=preview --allow-net --env-file --no-npm --no-remote dist/server/main.js",
    "generate:graphql": "deno run -A @graphql-codegen/cli/graphql-codegen-esm"
  },
  "permissions": {
    "dev": {
      "read": true,
      "env": true,
      "sys": true,
      "ffi": true,
      "run": true,
      "write": true
    },
    "build": {
      "read": true,
      "env": true,
      "sys": true,
      "ffi": true,
      "run": true,
      "write": true
    },
    "preview": {
      "read": ["dist"],
      "env": true
    }
  },
  "imports": {
    "@miyauci/material-react": "jsr:@miyauci/material-react@^1.0.0-beta.24",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@/": "./src/",
    "~config/sentry": "./src/sentry.config.ts",
    "~env": "./src/env.ts"
  },
  "nodeModulesDir": "auto",
  "exclude": [
    "dist",
    "CHANGELOG.md"
  ],
  "workspace": [
    "src/lib/vite_node_builtin_scheme",
    "src/lib/vite_node_env",
    "src/lib/react_router",
    "src/lib/router",
    "src/lib/vite_rsc_assets_manifest",
    "src/lib/vite_plugin_import_meta",
    "src/lib/deno_env",
    "src/lib/html_stream",
    "src/lib/rsc_protocol",
    "src/lib/react_app",
    "src/lib/routekit",
    "src/lib/vite_plugin_deno"
  ],
  "lint": {
    "rules": {
      "exclude": [
        "no-slow-types"
      ],
      "include": [
        "explicit-module-boundary-types",
        "explicit-function-return-type",
        "eqeqeq",
        "camelcase",
        "no-await-in-loop",
        "no-eval",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-useless-rename",
        "prefer-ascii"
      ]
    },
    "exclude": ["./src/gql"]
  },
  "fmt": {
    "exclude": ["./src/gql"]
  }
}
